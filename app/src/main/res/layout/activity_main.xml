<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.MainActivity">

    <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

        <Button
                android:id="@+id/btnReImport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reimport_data"/>

        <Button
                android:id="@+id/btnShowHourReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_hour_report"/>
        <Button
                android:id="@+id/btnShowDayReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_day_report"/>

        <Button
                android:id="@+id/btnShowWeekReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_week_report"/>


    </LinearLayout>


</ScrollView>